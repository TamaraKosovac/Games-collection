<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Mozgalica" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
    </style>

    <style name="Theme.Mozgalica" parent="Base.Theme.Mozgalica" />

    <style name="MozgalicaButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <style name="MozgalicaReverseButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/colorOnPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="MozgalicaTitle" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MozgalicaCard" parent="Base.CardView">
        <item name="cardBackgroundColor">@color/colorSurface</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/input_spacing_vertical</item>
    </style>

    <style name="MozgalicaSecondaryButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:textSize">@dimen/button_text</item>
    </style>

    <style name="TicTacToeCell">
        <item name="android:layout_width">@dimen/tic_tac_toe_cell_size</item>
        <item name="android:layout_height">@dimen/tic_tac_toe_cell_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/gravity</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:background">@drawable/cell_background</item>
    </style>

    <style name="SudokuCell">
        <item name="android:layout_width">@dimen/game_button_top_margin</item>
        <item name="android:layout_height">@dimen/game_button_top_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_welcome_size</item>
        <item name="android:background">@drawable/sudoku_cell_background</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <style name="MemoryCard">
        <item name="android:layout_width">@dimen/card_size</item>
        <item name="android:layout_height">@dimen/card_size</item>
        <item name="android:background">@drawable/card_back</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:contentDescription">@string/card</item>
        <item name="android:onClick">onCardClick</item>
        <item name="android:padding">4dp</item>
    </style>

</resources>
